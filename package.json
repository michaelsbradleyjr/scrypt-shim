{
  "name": "scrypt-shim",
  "version": "0.1.0",
  "author": "web3.js",
  "description": "scrypt shim",
  "homepage": "https://github.com/web3-js/scrypt-shim#readme",
  "bugs": "https://github.com/web3-js/scrypt-shim/issues",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web3-js/scrypt-shim.git"
  },
  "main": "src/index.js",
  "browser": "src/browser.js",
  "files": [
    "scripts",
    "src"
  ],
  "scripts": {
    "clean": "npx rimraf coverage package scrypt-shim-*.tgz",
    "lint": "eslint scripts/ src/",
    "lint:fix": "npm run lint -- --fix",
    "postinstall": "node ./scripts/postinstall.js",
    "prepublishOnly": "npm-run-all lint test",
    "test": "jest"
  },
  "dependencies": {
    "scryptsy": "^2.1.0",
    "semver": "^6.3.0"
  },
  "devDependencies": {
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.9.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "rimraf": "3.0.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "plugin:jest/style",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2016
    }
  },
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.js"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
